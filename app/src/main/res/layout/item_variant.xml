<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#E8F4FD"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginBottom="12dp">

            <!-- Edit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditVariant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.TextButton"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconTint="@color/primaryColor"
                android:textColor="@color/primaryColor"
                android:layout_marginEnd="8dp" />

            <!-- Delete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteVariant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.TextButton"
                app:icon="@drawable/ic_delete"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconTint="@color/errorColor"
                android:textColor="@color/errorColor" />

        </LinearLayout>

        <!-- Header Section with Variant Info and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Variant Badge with Icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/badge_variant"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_weight"
                    app:tint="#FFFFFF"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvVariantMeasure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 g"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Status Toggle with Better Styling -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="12sp"
                    android:textColor="#64748B"
                    android:textStyle="bold" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchVariantStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    app:trackColor="@color/switch_track"
                    app:thumbColor="@android:color/white"
                    app:useMaterialThemeColors="true" />

            </LinearLayout>

        </LinearLayout>

        <!-- Variant ID -->
        <TextView
            android:id="@+id/tvVariantId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: VAR001"
            android:textSize="12sp"
            android:textColor="#94A3B8"
            android:layout_marginTop="8dp" />

        <!-- Pricing Section with Enhanced Design -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#F8FAFC"
            app:cardElevation="0dp"
            app:strokeColor="#E2E8F0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_price_tag"
                        app:tint="#475569"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pricing"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B" />

                </LinearLayout>

                <!-- Regular Price with Enhanced Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Regular Price"
                        android:textSize="14sp"
                        android:textColor="#475569" />

                    <TextView
                        android:id="@+id/etVariantPrice"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="50.00"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:background="@drawable/bg_rounded_corners"

                        android:textColor="#1E293B"
                        android:textStyle="bold"
                      />

                </LinearLayout>

                <!-- Actual Price Display -->
                <LinearLayout
                    android:id="@+id/layoutActualPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Actual Price"
                        android:textSize="14sp"
                        android:textColor="#475569" />

                    <TextView
                        android:id="@+id/tvActualPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded_corners"
                        android:text="â‚¹0.00"
                        android:textSize="16sp"
                        android:textColor="#16A34A"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Discount Type Selector with Improved Styling -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount Type"
                        android:textSize="14sp"
                        android:textColor="#475569"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:strokeColor="#E2E8F0"
                        app:strokeWidth="1dp">

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/toggleDiscountType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:singleSelection="true"
                            app:selectionRequired="true"
                            android:gravity="center">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnNoDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                style="@style/DiscountToggleButton"
                                android:text="None" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnFlat"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                style="@style/DiscountToggleButton"
                                android:text="Flat" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnPercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                style="@style/DiscountToggleButton"
                                android:text="Percentage" />

                        </com.google.android.material.button.MaterialButtonToggleGroup>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Discount Value with Enhanced Input -->
                <LinearLayout
                    android:id="@+id/layoutDiscountValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvDiscountLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Discount Amount"
                        android:textSize="14sp"
                        android:textColor="#475569" />

                    <TextView
                        android:id="@+id/etDiscountValue"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:background="@drawable/bg_rounded_corners"
                        android:textColor="#1E293B"
                        android:textStyle="bold"
                     />

                </LinearLayout>

                <!-- Action Buttons and Discount Badge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Update Button -->
<!--                    <com.google.android.material.button.MaterialButton-->
<!--                        android:id="@+id/btnUpdateVariant"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Update Price"-->
<!--                        android:textSize="12sp"-->
<!--                        android:visibility="gone"-->
<!--                        style="@style/Widget.Material3.Button.OutlinedButton"-->
<!--                        app:icon="@drawable/ic_update"-->
<!--                        app:iconGravity="textStart"-->
<!--                        app:iconPadding="4dp"-->
<!--                        app:iconTint="@color/primaryColor"-->
<!--                        android:textColor="@color/primaryColor" />-->

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Discount Badge with Icon -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/badge_discount"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_discount"
                            app:tint="#FFFFFF"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/tvDiscountBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Discount"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Inventory & Details Section with Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingVertical="8dp">

            <!-- Stock Info with Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_inventory"
                        app:tint="#64748B"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock"
                        android:textSize="12sp"
                        android:textColor="#64748B" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 units"
                    android:textSize="14sp"
                    android:textColor="#1E293B"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="8dp"
                android:background="#E2E8F0" />

            <!-- SKU Info with Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_barcode"
                        app:tint="#64748B"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SKU Code"
                        android:textSize="12sp"
                        android:textColor="#64748B" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvSkuCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SKU00123"
                    android:textSize="14sp"
                    android:textColor="#1E293B"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>