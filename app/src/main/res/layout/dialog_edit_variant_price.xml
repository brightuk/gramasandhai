<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="0dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_header_background"
        android:padding="24dp">

        <!-- Icon and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#E0F2FE"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_variant_edit"
                    android:layout_gravity="center"
                    app:tint="#0369A1" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/tvDialogTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Variant Price"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A202C" />

                <TextView
                    android:id="@+id/tvVariantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 g Variant"
                    android:textSize="14sp"
                    android:textColor="#718096"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Current Price Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/current_price_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_rupee"
                android:layout_marginEnd="8dp"
                app:tint="#4A5568" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Current Price"
                android:textSize="14sp"
                android:textColor="#718096" />

            <TextView
                android:id="@+id/tvCurrentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2D3748" />

        </LinearLayout>

        <!-- New Price Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Price"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#0369A1"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_rupee"
            app:endIconTint="#0369A1"
            app:hintTextColor="#718096"
            app:startIconDrawable="@drawable/ic_edit"
            app:startIconTint="#0369A1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="#1A202C"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Discount Type Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discount Type"
            android:textSize="14sp"
            android:textColor="#475569"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F8FAFC"
            app:strokeColor="#E2E8F0"
            app:strokeWidth="1dp">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleDiscountType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNoDiscount"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="No Discount"
                    android:textSize="13sp"
                    style="@style/DiscountToggleButton"
                    app:strokeColor="#E2E8F0" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFlatDiscount"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Flat"
                    android:textSize="13sp"
                    style="@style/DiscountToggleButton"
                    app:strokeColor="#E2E8F0" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPercentageDiscount"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Percentage"
                    android:textSize="13sp"
                    style="@style/DiscountToggleButton"
                    app:strokeColor="#E2E8F0" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

        </com.google.android.material.card.MaterialCardView>

        <!-- Discount Value Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discount Value"
            android:layout_marginTop="16dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#0369A1"
            app:hintTextColor="#718096"
            app:startIconDrawable="@drawable/ic_discount"
            app:startIconTint="#0369A1"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDiscountValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="#1A202C"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Final Price Preview -->
        <LinearLayout
            android:id="@+id/layoutFinalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/final_price_background"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_final_price"
                android:layout_marginEnd="8dp"
                app:tint="#059669" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Final Price"
                android:textSize="14sp"
                android:textColor="#475569" />

            <TextView
                android:id="@+id/tvFinalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0.00"
                android:textSize="16sp"
                android:textColor="#059669"
                android:textStyle="bold" />

        </LinearLayout>

