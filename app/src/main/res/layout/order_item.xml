<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/card_margin_horizontal"
    android:layout_marginVertical="@dimen/card_margin_vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order #07811724"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/element_spacing_small"
                android:background="@drawable/status_bg_pending"
                android:paddingHorizontal="@dimen/status_padding_horizontal"
                android:paddingVertical="@dimen/status_padding_vertical"
                android:text="Pending"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:maxLines="1" />

        </LinearLayout>

        <!-- Customer Info -->
        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_spacing_medium"
            android:text="Srinivash"
            android:textColor="#424242"
            android:textSize="@dimen/text_size_medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvOrderDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_spacing_xsmall"
            android:text="Oct 17, 2025"
            android:textColor="#757575"
            android:textSize="@dimen/text_size_small" />

        <!-- Products Preview (Clickable to expand) -->
        <LinearLayout
            android:id="@+id/productsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_spacing_medium"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:paddingVertical="@dimen/clickable_padding_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProductsPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organic Nutmeg, Garlic Peeled, Coconut Powder"
                    android:textColor="#616161"
                    android:textSize="@dimen/text_size_medium_small"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvItemsCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_spacing_xsmall"
                    android:text="3 items"
                    android:textColor="#9E9E9E"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivExpandArrow"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:layout_marginStart="@dimen/element_spacing_small"
                android:src="@drawable/ic_expand_more"
                android:contentDescription="Expand" />

        </LinearLayout>

        <!-- Expandable Variants Section -->
        <LinearLayout
            android:id="@+id/variantsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="@dimen/element_spacing_medium">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="#E0E0E0"
                android:layout_marginBottom="@dimen/element_spacing_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Items:"
                android:textColor="#424242"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/element_spacing_small" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/variantsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Footer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_spacing_medium"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvOrderAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â‚¹283.95"
                android:textColor="#FF0000"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <Button
                    android:id="@+id/btnViewDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="@dimen/element_spacing_small"
                    android:background="@drawable/btn_outlined_bg"
                    android:text="Details"
                    android:textColor="#2196F3"
                    android:textSize="@dimen/text_size_small"
                    android:minWidth="@dimen/button_min_width" />

                <Button
                    android:id="@+id/btnUpdateStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:background="@drawable/btn_contained_bg"
                    android:text="Process"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_small"
                    android:minWidth="@dimen/button_min_width" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>