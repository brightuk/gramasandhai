<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_background"
    android:padding="16dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Stats Row 1 Shimmer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Order Count Card Shimmer -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <View
                            android:layout_width="60dp"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginBottom="8dp" />

                        <View
                            android:layout_width="100dp"
                            android:layout_height="16dp"
                            android:background="@color/shimmer_color" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Revenue Card Shimmer -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <View
                            android:layout_width="80dp"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginBottom="8dp" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="16dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginBottom="4dp" />

                        <View
                            android:layout_width="70dp"
                            android:layout_height="14dp"
                            android:background="@color/shimmer_color" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Stats Row 2 Shimmer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Pending Orders Card Shimmer -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <View
                            android:layout_width="40dp"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginBottom="8dp" />

                        <View
                            android:layout_width="100dp"
                            android:layout_height="16dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginBottom="4dp" />

                        <View
                            android:layout_width="90dp"
                            android:layout_height="14dp"
                            android:background="@color/shimmer_color" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Completed Orders Card Shimmer -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <View
                            android:layout_width="50dp"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginBottom="8dp" />

                        <View
                            android:layout_width="80dp"
                            android:layout_height="16dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginBottom="4dp" />

                        <View
                            android:layout_width="70dp"
                            android:layout_height="14dp"
                            android:background="@color/shimmer_color" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Quick Actions Title Shimmer -->
            <View
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:background="@color/shimmer_color"
                android:layout_marginBottom="12dp" />

            <!-- Quick Actions Grid Shimmer -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:columnCount="3"
                android:rowCount="2">

                <!-- Products Card Shimmer -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginBottom="8dp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="14dp"
                            android:background="@color/shimmer_color" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Orders Card Shimmer -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginBottom="8dp" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="14dp"
                            android:background="@color/shimmer_color" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Inventory Card Shimmer -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginBottom="8dp" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="14dp"
                            android:background="@color/shimmer_color" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- Recent Activity Title Shimmer -->
            <View
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:background="@color/shimmer_color"
                android:layout_marginBottom="12dp" />

            <!-- Recent Activity Card Shimmer -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Activity Item 1 Shimmer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <View
                                android:layout_width="200dp"
                                android:layout_height="16dp"
                                android:background="@color/shimmer_color"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:layout_width="150dp"
                                android:layout_height="14dp"
                                android:background="@color/shimmer_color" />

                        </LinearLayout>

                        <View
                            android:layout_width="60dp"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="@color/divider_color" />

                    <!-- Activity Item 2 Shimmer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <View
                                android:layout_width="180dp"
                                android:layout_height="16dp"
                                android:background="@color/shimmer_color"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:layout_width="120dp"
                                android:layout_height="14dp"
                                android:background="@color/shimmer_color" />

                        </LinearLayout>

                        <View
                            android:layout_width="50dp"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</LinearLayout>