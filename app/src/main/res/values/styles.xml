<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Your custom styles -->
    <style name="ChipTextStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DiscountToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CornerSize10</item>
        <item name="strokeColor">@color/primaryColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/toggle_button_text_color</item>
        <item name="backgroundTint">@color/toggle_button_background_color</item>
        <item name="rippleColor">@color/toggle_button_ripple_color</item>
    </style>

    <style name="DiscountToggleButton.Checked" parent="DiscountToggleButton">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize16" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize12" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize10" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Widget.Material3.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:minHeight">64dp</item>
        <item name="boxCollapsedPaddingTop">20dp</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="Widget.Material3.TextInputEditText.Large" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:minHeight">52dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Order Management Styles -->
    <style name="OrderCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="OrderActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/primaryColor</item>
    </style>

    <style name="OrderActionButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/primaryColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="AdvancedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxBackgroundColor">#F7FAFC</item>
        <item name="boxStrokeColor">#E2E8F0</item>
        <item name="hintTextColor">#718096</item>
        <item name="startIconTint">@color/icon_tint</item>
        <item name="prefixTextColor">#718096</item>
        <item name="suffixTextColor">#718096</item>
    </style>


    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


<!--    ggggggggggggggg-->



    <!-- Custom Material Theme -->
    <style name="CustomMaterialDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="RadioButtonMaterial" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- Enhanced Card Style -->
    <style name="EnhancedCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.Material3.Chip.Filter" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/status_processing_bg</item>
        <item name="chipStrokeColor">@color/border_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <!-- DatePicker Theme -->
    <style name="DatePickerTheme" parent="Theme.Material3.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Material Button Styles -->
    <style name="Widget.Material3.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Material3.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>



</resources>